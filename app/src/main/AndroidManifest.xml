<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.space_invaders">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_identifier" />

        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpaceInvadersActivity0"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".SpaceInvadersActivity"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".LostScreenActivity"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".WinningScreenActivity"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".MemoryGameActivity2"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".MemoryGame_choose_octave_Activity3"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".MemoryGameActivity"
            android:screenOrientation="sensorPortrait"></activity>
        <activity
            android:name=".NewHighScoreActivity"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".NotesActivity0"
            android:screenOrientation="sensorLandscape"></activity>
        <activity
            android:name=".NotesActivity"
            android:screenOrientation="sensorLandscape"></activity>
    </application>

</manifest>